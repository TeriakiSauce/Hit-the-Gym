<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outline -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#21307E" />
        </shape>
    </item>

    <!-- Inner Content -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="?android:attr/windowBackground" /> <!-- Your card background color -->
            <corners android:radius="8dp" /> <!-- Match your card corner radius -->
        </shape>
    </item>
</layer-list>
