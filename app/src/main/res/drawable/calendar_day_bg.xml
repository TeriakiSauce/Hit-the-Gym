<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFB6C1" /> <!-- Highlight color when pressed -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Default background color -->
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" /> <!-- Border color -->
        </shape>
    </item>
</selector>