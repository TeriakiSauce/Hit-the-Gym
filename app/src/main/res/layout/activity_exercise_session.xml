<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- KonfettiView -->
    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/exerciseSessionScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <LinearLayout
            android:id="@+id/exerciseSessionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Exercise Name Section -->
            <TextView
                android:id="@+id/exerciseNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="8dp" />

            <!-- Exercise Image Section -->
            <ImageView
                android:id="@+id/exerciseImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:contentDescription="Exercise Image"
                android:background="@color/white"
                android:layout_marginBottom="8dp" />

            <!-- Exercise Instructions Section -->
            <TextView
                android:id="@+id/exerciseInstructionsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exercise Instructions"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:maxLines="3"
                android:ellipsize="end"
                android:paddingBottom="8dp" />

            <Button
                android:id="@+id/toggleInstructionsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show More"
                android:background="@color/transparent"
                android:textColor="@color/blue"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp" />
            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/exerciseProgressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="50"
                android:progressTint="@color/green"
                android:layout_marginBottom="16dp" />

            <!-- Sets Table -->
            <TableLayout
                android:id="@+id/setsTableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_table_background"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:stretchColumns="1,2"
                android:shrinkColumns="1,2">

                <!-- Example Row -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Type"
                        android:textSize="14sp"
                        android:textColor="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reps"
                        android:textSize="14sp"
                        android:textColor="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight (lbs)"
                        android:textSize="14sp"
                        android:textColor="@color/white" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/check_icon"
                        android:contentDescription="Check Icon"
                        android:background="@color/white" />
                </TableRow>
            </TableLayout>

            <!-- Optional Footer or Buttons -->
            <!--
            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_gravity="center_horizontal"
                android:background="@color/green"
                android:textColor="@color/white" />
            -->

        </LinearLayout>

    </ScrollView>
</FrameLayout>